{
	"name": "backend",
	"version": "1.0.0",
	"description": "",
	"main": "src/index.ts",
	"scripts": {
		"test": "echo \"Error: no test specified\" && exit 1",
		"build": "tsc",
		"start": "node dist/index.js",
		"dev": "concurrently \"npx tsc --watch\" \"nodemon -q dist/index.js\"",
		"format": "prettier --write \"src/**/*.{js,ts}\"",
		"db:create": "sequelize db:create",
		"db:migrate": "sequelize db:migrate",
		"db:migrate:seed": "npm run db:migrate && npm run db:seed",
		"db:seed": "sequelize db:seed:all",
		"db:drop": "sequelize db:drop",
		"db:drop:create:migrate:seed": "npm run db:drop && npm run db:create && npm run db:migrate && npm run db:seed"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"argon2": "^0.30.3",
		"cors": "^2.8.5",
		"date-fns": "^2.30.0",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"express-validator": "^6.15.0",
		"helmet": "^6.0.1",
		"jsonwebtoken": "^9.0.0",
		"multer": "^1.4.5-lts.1",
		"nodemailer": "^6.9.3",
		"pg": "^8.10.0",
		"pg-hstore": "^2.3.4",
		"sequelize": "^6.32.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/multer": "^1.4.7",
		"@types/node": "^18.15.3",
		"@types/pg": "^8.6.6",
		"concurrently": "^7.6.0",
		"husky": "^4.3.8",
		"nodemon": "^2.0.21",
		"prettier": "^2.8.4",
		"pretty-quick": "^3.1.3",
		"sequelize-cli": "^6.6.1",
		"sequelize-typescript": "^2.1.5",
		"typescript": "^5.0.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	}
}
