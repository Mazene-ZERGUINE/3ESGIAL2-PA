<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clm.controllers.addTaskController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0">
         <children>
            <AnchorPane layoutX="200.0" layoutY="24.0" opacity="0.75" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #000958;">
               <effect>
                  <Glow />
               </effect>
               <children>
                  <Label layoutX="30.0" layoutY="13.0" prefHeight="17.0" prefWidth="158.0" text="Ajouter une nouvel task" textFill="WHITE" />
               </children>
            </AnchorPane>
            <TextField fx:id="title" layoutX="29.0" layoutY="106.0" prefHeight="26.0" prefWidth="248.0" promptText="Titre" />
            <DatePicker fx:id="deadline" layoutX="311.0" layoutY="106.0" prefHeight="26.0" prefWidth="248.0" promptText="Deadline" />
            <TextArea fx:id="description" layoutX="28.0" layoutY="183.0" prefHeight="128.0" prefWidth="532.0" promptText="Description" />
            <Button fx:id="addBtn" layoutX="33.0" layoutY="324.0" mnemonicParsing="false" onAction="#onAddBtnClick" prefHeight="26.0" prefWidth="234.0" style="-fx-background-color: #32a834;" text="Ajouter" textFill="WHITE" />
            <Button fx:id="quitBtn" layoutX="323.0" layoutY="324.0" mnemonicParsing="false" onAction="#onQuitBtnClick" prefHeight="26.0" prefWidth="234.0" style="-fx-background-color: #a83234;" text="Annuler" textFill="WHITE" />
            <ComboBox layoutX="28.0" layoutY="144.0" prefHeight="26.0" prefWidth="532.0" promptText="Membres" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
