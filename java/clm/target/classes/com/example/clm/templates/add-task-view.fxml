<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Glow?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.clm.controllers.addTaskController">
   <children>
      <AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="mainPane">
         <children>
            <AnchorPane layoutX="200.0" layoutY="24.0" opacity="0.75" prefHeight="43.0" prefWidth="200.0" style="-fx-background-color: #000958;">
               <effect>
                  <Glow />
               </effect>
               <children>
                  <Label layoutX="42.0" layoutY="13.0" prefHeight="17.0" prefWidth="158.0" text="Ajouter une tâche" textFill="WHITE" />
                  <Label layoutX="158.0" layoutY="13.0" />
               </children>
            </AnchorPane>

            <TextField fx:id="title" layoutX="29.0" layoutY="98.0" prefHeight="26.0" prefWidth="248.0" promptText="Titre" styleClass="inputs" />
            <DatePicker fx:id="deadline" layoutX="29.0" layoutY="138.0" prefHeight="26.0" prefWidth="248.0" promptText="Date limite" styleClass="inputs" />
            <TextArea fx:id="description" layoutX="29.0" layoutY="177.0" prefHeight="128.0" prefWidth="248.0" promptText="Description" styleClass="inputs" />
            <Button fx:id="addBtn" layoutX="27.0" layoutY="324.0" mnemonicParsing="false" onAction="#onAddBtnClick" prefHeight="26.0" prefWidth="248.0" styleClass="add-button" text="Ajouter" textFill="WHITE" />
            <Button fx:id="quitBtn" layoutX="323.0" layoutY="324.0" mnemonicParsing="false" onAction="#onQuitBtnClick" prefHeight="26.0" prefWidth="248.0" styleClass="delete-button" text="Annuler" textFill="WHITE" />
            <Label fx:id="usersNumber" layoutX="570.0" layoutY="111.0" prefHeight="17.0" prefWidth="6.0" textFill="#50942b" />
            <ListView fx:id="usersList" editable="true" layoutX="323.0" layoutY="140.0" prefHeight="168.0" prefWidth="248.0" styleClass="inputs" />
            <DatePicker fx:id="startDate" layoutX="323.0" layoutY="98.0" prefHeight="26.0" prefWidth="248.0" promptText="Date de début" styleClass="inputs" />
         </children>
      </AnchorPane>
   </children>
</AnchorPane>
