/** scraping a web page html code */
fun scrapHtmlPageDemo()
    start
        check = website::is_html();

        if (check) -> { 
            message = "scraping "?.website;
            print(message);

            /** scraping website data */ 
            content = website::scan();

            print(content); 
            
        } else {
            message = "invalide url! "?.website?." is not a website";
            print(message);
        }
    end


/** scraping data from  a table */
fun scrapTableDemo(content)
    start

       table = content::get_table_by_id("ENTable");
       table_data = table::fetch_all();
       print(table_data);

    end

/** scraping all heading tags in an html page h1 , h2, h3 ..etc */
fun scrapAllTitles(content)
    start

        titles = content::get_all_titles();
        print(titles); 
    end




