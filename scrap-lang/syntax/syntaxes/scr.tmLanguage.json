{
  "name": "Scrap Programming Langage",
  "scopeName": "source.scr",
  "fileTypes": ["*.scr"],
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#strings"
    },
    {
      "include": "#keywords"
    },
    {
      "include": "#operators"
    },
    {
      "include": "#punctuation"
    },
    {
      "include": "#numbers"
    },
    {
      "include": "#variables"
    },
    {
      "include": "#function-calls"
    },
    {
      "include": "#expressions"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.block.custom-language",
          "match": "/\\*.*?\\*/",
          "captures": {
            "0": {
              "name": "punctuation.definition.comment.custom-language"
            }
          }
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.custom-language",
          "match": "\"[^\"]*\"",
          "captures": {
            "0": {
              "name": "punctuation.definition.string.begin.custom-language"
            },
            "1": {
              "name": "punctuation.definition.string.end.custom-language"
            }
          }
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.custom-language",
          "match": "\\b(?:if|else|elseif|for|to|while|fun|start|end|return|def|is_html|scan|get_table_by_id|fetch_all|get_all_titles|filter|capacity|get_all_texts|false|true)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.custom-language",
          "match": "\\b(?:or|and|==|!=|>|<|\\+|\\-|\\*|\\/|&|\\|\\||\\?\\?)\\b"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.separator.custom-language",
          "match": "[;,{}()]"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.custom-language",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "variables": {
      "patterns": [
        {
          "name": "variable.other.custom-language",
          "match": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\b"
        }
      ]
    },
    "function-calls": {
      "patterns": [
        {
          "name": "meta.function-call.custom-language",
          "begin": "\\b[a-zA-Z_][a-zA-Z_0-9]*\\s*\\(",
          "end": "\\)",
          "patterns": [
            {
              "include": "#variables"
            },
            {
              "include": "#expressions"
            },
            {
              "name": "punctuation.definition.parameters.custom-language",
              "match": "[()]"
            },
            {
              "name": "punctuation.separator.parameter.custom-language",
              "match": ","
            }
          ]
        }
      ]
    },
    "expressions": {
      "patterns": [
        {
          "name": "keyword.operator.assignment.custom-language",
          "match": "\\b\\w+\\s*=\\s*"
        },
        {
          "name": "keyword.operator.arithmetic.custom-language",
          "match": "[+\\-*/]"
        },
        {
          "name": "keyword.operator.comparison.custom-language",
          "match": "\\b(?:==|!=|>|<|>=|<=)\\b"
        },
        {
          "name": "keyword.operator.logical.custom-language",
          "match": "\\b(?:or|and)\\b"
        }
      ]
    },
    "logo": {
      "logo": "https://cdn.dribbble.com/users/1642260/screenshots/3752915/media/3fee78eafe01a39a5b5d7eb00699add4.png"
    }
  }
}
